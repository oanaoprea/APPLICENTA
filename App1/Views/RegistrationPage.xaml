<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:models="clr-namespace:App1.Models"
             x:Class="App1.Views.RegistrationPage"
             Shell.FlyoutBehavior="Disabled"
             x:DataType="models:User"
             Title="Registration">
    <ContentPage.BindingContext>
        <models:User/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center"
                     Padding="20">
            <Label Text="Username: " 
                   FontSize="25"
                   FontAttributes="Bold"
                   Margin="15,10,10,0"/>
            <Entry x:Name="username"
                Placeholder="username" 
                   Margin="10,0,10,0"
                   Text="{Binding Username}"/>
            <Label Text="Password: "
                   FontSize="25"
                   FontAttributes="Bold"
                   Margin="15,10,10,0"/>
            <Entry x:Name="password" 
                IsPassword="True" Placeholder="password"
                   Margin="10,0,10,0"
                   Text="{Binding Password}"/>
            <Button Text="Register" Clicked="Button_Clicked"
                    Margin="10"
                    BackgroundColor="Green"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>